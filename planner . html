<!-- planner.html -->
<!DOCTYPE html>
<html>
<head>
  <title>Planner</title>
  <link rel="stylesheet" href="style.css">
</head>
<body>

  <nav>
    <div>
      <a href="dashboard.html">🏠 Dashboard</a>
      <a href="upload.html">📤 Upload</a>
    </div>
    <button class="logout-btn" onclick="logout()">Logout</button>
  </nav>

  <div class="container">
    <h2>📝 Your Daily Planner</h2>
    <input type="text" id="task" placeholder="Enter your task" />
    <button onclick="addTask()">Add Task</button>
    <ul id="taskList"></ul>
  </div>

  <script src="https://www.gstatic.com/firebasejs/10.11.1/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/10.11.1/firebase-auth.js"></script>
  <script src="https://www.gstatic.com/firebasejs/10.11.1/firebase-database.js"></script>

  <script>
    const firebaseConfig = {
      apiKey: "AIzaSyBpWuhoWGHhtNjhMX2wboOIYeKSWPGVjQw",
      authDomain: "medsathuin.firebaseapp.com",
      projectId: "medsathuin",
      storageBucket: "medsathuin.appspot.com",
      messagingSenderId: "1087859187304",
      appId: "1:1087859187304:web:32bb82b3857b63cc87a5dd"
    };
    firebase.initializeApp(firebaseConfig);
    const auth = firebase.auth();
    const database = firebase.database();

    let currentUser;

    auth.onAuthStateChanged(user => {
      if (user) {
        currentUser = user.uid;
        loadTasks();
      } else {
        window.location.href = "auth.html";
      }
    });

    function addTask() {
      const task = document.getElementById("task").value;
      if (!task) return;
      const taskRef = database.ref("planner/" + currentUser).push();
      taskRef.set({ text: task });
      document.getElementById("task").value = "";
      loadTasks();
    }

    function loadTasks() {
      const taskList = document.getElementById("taskList");
      taskList.innerHTML = "";
      database.ref("planner/" + currentUser).once("value", snapshot => {
        snapshot.forEach(child => {
          const li = document.createElement("li");
          li.innerText = child.val().text;
          taskList.appendChild(li);
        });
      });
    }

    function logout() {
      auth.signOut().then(() => {
        window.location.href = "auth.html";
      });
    }
  </script>

</body>
</html>
