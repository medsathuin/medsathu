<html lang="en">
<head>
  <meta charset="UTF-8" /><meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Image Uploader</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f2f2f2; padding: 40px;
    }
    h2 { text-align: center; }
    .upload-box {
      background: white; padding: 20px; border-radius: 10px; max-width: 400px;
      margin: 0 auto; box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      text-align: center;
    }
    input[type="file"] {
      margin: 20px 0;
    }
    .preview {
      margin-top: 20px;
    }
    .preview img {
      max-width: 100%; border-radius: 10px;
    }
  </style>
</head>
<body>

<h2>Upload Your Image</h2>
<div class="upload-box">
  <input type="file" accept="image/*" onchange="previewImage(event)" />
  <div class="preview" id="preview-box"></div>
</div>

<script>
  function previewImage(event) {
    const reader = new FileReader();
    reader.onload = function () {
      const output = `<img src="${reader.result}" alt="Image Preview" />`;
      document.getElementById("preview-box").innerHTML = output;
    };
    reader.readAsDataURL(event.target.files[0]);
  }
</script>

</body>
</html>
